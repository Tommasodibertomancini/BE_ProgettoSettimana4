@model BE_ProgettoSettimana4.ViewModels.AnagraficheViewModel

<h1 class="my-3">Trasgressori</h1>
<a class="btn btn-primary" asp-controller="Anagrafiche" asp-action="Create">Aggiungi Trasgressore</a>
<table class="table">
    <thead>
        <tr>
            <th>Cognome</th>
            <th>Nome</th>
            <th>Indirizzo</th>
            <th>Città</th>
            <th>CAP</th>
            <th>Codice Fiscale</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var anagrafica in Model.Anagrafiche)
        {
            <tr>
                <td>@anagrafica.Cognome</td>
                <td>@anagrafica.Nome</td>
                <td>@anagrafica.Indirizzo</td>
                <td>@anagrafica.Città</td>
                <td>@anagrafica.Cap</td>
                <td>@anagrafica.CodFisc</td>
            </tr>
        }
    </tbody>
</table>
