@model BE_ProgettoSettimana4.ViewModels.VerbaliViewModel

<h1 class="my-3">Crea Verbale</h1>
<form asp-action="Create">
    <div class="form-group mb-2">
        <label asp-for="Verbale.Idanagrafica">Trasgressore</label>
        <select asp-for="Verbale.Idanagrafica" class="form-control" asp-items="Model.Anagrafiche"></select>
    </div>
    <div class="form-group mb-2">
        <label asp-for="Verbale.Idviolazione">Violazione</label>
        <select asp-for="Verbale.Idviolazione" class="form-control" asp-items="Model.TipoViolazioni"></select>
    </div>
    <div class="form-group mb-2">
        <label asp-for="Verbale.DataViolazione"></label>
        <input asp-for="Verbale.DataViolazione" class="form-control" />
    </div>
    <div class="form-group mb-2">
        <label asp-for="Verbale.IndirizzoViolazione"></label>
        <input asp-for="Verbale.IndirizzoViolazione" class="form-control" />
    </div>
    <div class="form-group mb-2">
        <label asp-for="Verbale.NominativoAgente"></label>
        <input asp-for="Verbale.NominativoAgente" class="form-control" />
    </div>
    <div class="form-group mb-2">
        <label asp-for="Verbale.DataTrascrizioneVerbale"></label>
        <input asp-for="Verbale.DataTrascrizioneVerbale" class="form-control" />
    </div>
    <div class="form-group mb-2">
        <label asp-for="Verbale.Importo"></label>
        <input asp-for="Verbale.Importo" class="form-control" />
    </div>
    <div class="form-group mb-2">
        <label asp-for="Verbale.DecurtamentoPunti"></label>
        <input asp-for="Verbale.DecurtamentoPunti" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary mb-2">Salva</button>
</form>
