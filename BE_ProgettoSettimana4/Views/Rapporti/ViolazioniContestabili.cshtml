@model BE_ProgettoSettimana4.ViewModels.RapportoViewModel

<h1 class="my-3">@Model.Titolo</h1>
<table class="table">
    <thead>
        <tr>
            <th>Importo</th>
            <th>Cognome</th>
            <th>Nome</th>
            <th>Data Violazione</th>
            <th>Decurtamento Punti</th>
            <th>Descrizione</th>
        </tr>
    </thead>
    <tbody>

        @if(Model.Report != null && Model.Report.Count >0)
{
        @foreach (var item in Model.Report)
        {
            <tr>
                <td>@item.Importo</td>
                <td>@item.Cognome</td>
                <td>@item.Nome</td>
                <td>@item.DataViolazione.ToString("dd/MM/yyyy")</td>
                <td>@item.DecurtamentoPunti</td>
                <td>@item.Descrizione</td>
            </tr>
        }
}
    </tbody>
</table>
